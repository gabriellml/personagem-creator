<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.activity.VencedorFragment"
    android:background="#9C7264">


    <TextView
        android:id="@+id/fragment_vencedor_texto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Winner"
        android:layout_marginHorizontal="120dp"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="8dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/fragment_vencedor_winner"
        />

    <TextView
        android:id="@+id/fragment_vencedor_winner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="nome_do_personagem"
        app:layout_constraintStart_toStartOf="@id/fragment_vencedor_texto"
        app:layout_constraintEnd_toEndOf="@id/fragment_vencedor_texto"
        app:layout_constraintTop_toBottomOf="@id/fragment_vencedor_texto"
        app:layout_constraintBottom_toTopOf="@id/fragment_vencedor_botao"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="18dp"
        />

    <Button
        android:id="@+id/fragment_vencedor_botao"
        android:layout_width="70dp"
        android:layout_height="40dp"
        app:layout_constraintStart_toStartOf="@id/fragment_vencedor_winner"
        app:layout_constraintEnd_toEndOf="@id/fragment_vencedor_winner"
        app:layout_constraintTop_toBottomOf="@id/fragment_vencedor_winner"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="18dp"
        android:text="ok"

        />



</androidx.constraintlayout.widget.ConstraintLayout>